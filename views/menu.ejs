<!DOCTYPE html>
<html lang="en">
  <head>
    <title>menu Page</title>
    <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" type="text/css" />
    <link rel="stylesheet" href="/vendor/border-box.css" type="text/css" />

    <link rel="stylesheet" href="/styles/menu.css" type="text/css" />
    <link rel="stylesheet" href="/styles/nav.css" type="text/css" />

  </head>

  <body>
    <nav id="nav-bar">
      <span class="header">Home</span>
    </nav>
    <main>
      <h1>EBI TEN MENU</h1>

      <table id="menu_table">
        <thead>
        <tr>
          <th>
            #
          </th>
          <th class="food">
            FOODS
          </th>
          <th>DROP</th>
          <th></th>
          <th>AMOUNT</th>
          <th>PICK</th>
          <th></th>
          <th class="price">
            PRICE
          </th>
        </tr>

      </table>

      <section id="total_price">

      </section>

      <!--Creates the popup body-->
      <div class="popup-overlay">
        <!--Creates the popup content-->
        <div class="popup-content">
          <h3>Phone number</h3><span id="order_total"></span>
          
          <div><span class="note">Format: 123-456-7890</span></div>
          <!--popup's close button-->
          <form action="/menu" method="post" class="form">
            <input type="tel" id="phone" name="phone" pattern="[0-9]{3}-[0-9]{3}-[0-9]{4}" required>
            <button class="confirm-order">Confirm order</button>
            <!-- <input type="hidden" name="test[][item1]" value="0">
            <input type="hidden" name="test[][item2]" value="1">
            <input type="hidden" name="test[][item3]" value="2">
            <input type="hidden" name="test[][item4]" value="3"> -->
            <div class="hidden"></div>
            <table class="order_table"></table>
          </form>
          <button class="close">Cancel</button>
        </div>
      </div>
      <button class="open">Order Now</button>

    </main>

    <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>
    <script type="text/javascript" src="/scripts/app.js"></script>
  </body>

</html>
