<!DOCTYPE html>
<html lang="en">
  <head>
    <title>menu Page</title>
    <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" type="text/css" />
    <link rel="stylesheet" href="/vendor/border-box.css" type="text/css" />
    
    <link rel="stylesheet" href="/styles/menu.css" type="text/css" />
    <link rel="stylesheet" href="/styles/nav.css" type="text/css" />
    
  </head>

  <body>
    <nav id="nav-bar">
      <span class="header">Home</span>
    </nav>
    <main>
      <h1>EBI TEN MENU</h1>
      <table id="menu_table">
        <tr>
          <td>
            #
          </td>
          <td class="food">
            FOODS
          </td>
          <td>DROP</td>
          <td></td>
          <td>AMOUNT</td>
          <td>PICK</td>
          <td></td>
          <td class="price">
            PRICE
          </td>
        </tr>
      </table>
      <section id="total_price">

      </section>
      <button class="open">Order Now</button>
      <!--Creates the popup body-->
        <div class="popup-overlay">
            <!--Creates the popup content-->
            <div class="popup-content">
              <h3>Phone number</h3>
              
              <div><span class="note">Format: 123-456-7890</span></div>
              <!--popup's close button-->
              <form action="/menu" method="post" class="form">
                <input type="tel" id="phone" name="phone" pattern="[0-9]{3}-[0-9]{3}-[0-9]{4}" required>
                <input type="hidden" name="foods[0][name]" value='item 0'>
                <input type="text" name="foods[0][amt]" value='5'>
                <input type="text" name="foods[1][name]" value='item 1'>
                <input type="text" name="foods[2][name]" value='item 2'>
                <input type="text" name="foods[3][name]" value='item 3'>
                <button class="confirm-order">Confirm order</button>
                <table class="order_table"></table>
              </form>
              <button class="close">Cancel</button><span id="order_total"></span>
            </div>
          </div>
      
      
    </main>
    
    <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>
    <script type="text/javascript" src="/scripts/app.js"></script>
  </body>
  
</html>
